
{% extends 'ItcKidsBundle::layout.html.twig' %}
{% block body %}
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" class="modal " id="AddAttr" >
<div class="modal-header">
                <h3 id="myModalLabel">Создание шаблона</h3>
                </div>
                <div class="modal-body">
                <form action="{{ path('template_create') }}" method="post" {{ form_enctype(form) }} class="form_attr">
                <p>
                    Название : {{ form_widget(form.name) }}
                </p>
                <p>
                    Описание : {{ form_widget(form.content) }}
                </p>
                {{ form_widget(form._token) }}
                </form>
                </div>
                <div class="modal-footer">
                <button aria-hidden="true" data-dismiss="modal" class="btn">Close</button>
                <button class="btn btn-primary" onclick="$('.form_attr').submit()">Сохранить</button>
                </div>
</div>
{% endblock %}