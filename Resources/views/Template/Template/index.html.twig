{% extends 'ItcKidsBundle::layout.html.twig' %}
{% block body %}
<h4>Шаблоны</h4>
        <a href="{{ path('template_new') }}" class="btn btn-primary pull-right new_window" target= '_blank'>
            Создать
        </a>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Ссылка</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('template_edit', { 'id': entity.id }) }}" class="new_window" target= '_blank'>{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.url }}</td>
            <td>
                 <a href="{{ path('template_edit', { 'id': entity.id }) }}" class="btn btn-primary new_window" target= '_blank'>Редактировать</a>
               
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


        <a href="{{ path('template_new') }}" class="btn btn-primary pull-right new_window" target= '_blank'>
            Создать
        </a>

{% endblock %}