<h1>Список атрибутов</h1>


    {% for entity in entities %}
       
                 <form action="{{ path('attributs_update', {'templid': templid, 'id':  entity.id }) }}" method="post" {{ form_enctype(edit_form[entity.id]) }}>
                    {{ form_widget(edit_form[entity.id].name) }}
                            {% for attrvalue in edit_form[entity.id].attrvalues %}
                                    {{ form_widget(attrvalue.value) }}
                                    {{ form_widget(attrvalue.is_default) }}
                             <a href="{{ path('attributsvalue_delete', { 'id': attrvalue.id.get('value') }) }}">
                                Удалить
                             </a>
                         
                            {% endfor %}
                    {{ form_widget(edit_form[entity.id]._token) }}
                         <input type="submit" value="Сохранить"/>
                </form>
                    <p>
                         <a href="{{path('attributsvalue_new', { 'id':  entity.id }) }}">Добавить значение</a>
                    </p>
                <form action="{{ path('attributs_delete', { 'templid': templid, 'id': entity.id }) }}" method="post">
                    <input type="submit" value="Удалить"/>
                    {{ form_rest(delete_form[entity.id]) }}
                </form> 
{#
                        <a href="{{ path('attributs_edit', { 'templid': templid, 'id': entity.id }) }}">Редактировать</a>
 #}         

    {% endfor %}

  <p>
    <a href="{{ path('attributs_new', { 'templid': templid }) }}">
            Добавить атрибут
    </a>
  </p>