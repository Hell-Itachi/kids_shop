<h1>User\Adress list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Userid</th>
            <th>Fio</th>
            <th>H_num</th>
            <th>Street</th>
            <th>City</th>
            <th>Postcode</th>
            <th>State</th>
            <th>Pd_id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('user_addr_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.userid }}</td>
            <td>{{ entity.fio }}</td>
            <td>{{ entity.hnum }}</td>
            <td>{{ entity.street }}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.postcode }}</td>
            <td>{{ entity.state }}</td>
            <td>{{ entity.pdid }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_addr_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_addr_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('user_addr_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
