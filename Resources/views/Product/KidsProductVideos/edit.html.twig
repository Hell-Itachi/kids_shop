{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block menu %}
{% endblock %}
{% block body %}
{{ tinymce_init() }}
<form action="{{ path('videos_delete', { 'id': entity.id , 'video_gal':video_gal}) }}" class="delete_video" method="post">
    {{ form_widget(delete_form) }}
</form>
<div class="form-title form-title-ins">
        <div class="form-title-content">
                    <div class = 'menu_sys_icon_loader'>
                            <i class="item-edit-icon"></i>
                    </div>
                <div class="item-controls">
                        <a href="#" class="save-item" title="Сохранить" onclick="$('.menu-items-form').submit()"></a>
                        <a href="#" class="del-item" title="Удалить"  onclick="$('.delete_video').submit()"></a>
                        <div class="clear"></div>
                </div>
                <span class="title">Редактирование видео</span>
                <span></span>
                <div class="clear"></div>
        </div>
</div><!-- .form-title -->
<br />
<form action="{{ path('videos_update', { 'id': entity.id , 'video_gal':video_gal}) }}" method="post" class="menu-items-form"  style="top:40px; padding-top:0px;" {{ form_enctype(edit_form) }}>  
<div class="menu-item-info">
        <div class="item-info">
                <label for="pid">Код</label>
                {{ form_widget( edit_form.kod ) }}
        </div>
        <div class="item-info">
                <label for="pid">Виден</label>
                {{ form_widget( edit_form.is_visible ) }}
        </div>
</div>
<div id="tabs" class="tabs-wrap">
      <ul>
        <li><a href="#tabs-1">Описание</a></li>
      </ul>
<div id="tabs-1">
<div class="tx-fl">
    <label for="item-name">Описание</label>
    {{ form_widget( edit_form.content ) }}
</div>
</div>
</div>
{{ form_rest(edit_form) }}
</form>

{% endblock %}