{% extends 'ItcAdminBundle::layout.html.twig' %}

{% block body %}
{{ tinymce_init() }}
<h1  class='menu_sys_h1'>Методы доставки</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Price</th>
            <th>Title</th>
            <th>Kod</th>
            <th>{{ "actions"|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('shipping_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.kod }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('shipping_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('shipping_new') }}" class="new_window addbutton">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}