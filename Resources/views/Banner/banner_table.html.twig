
{% block body %}

{% block table %}                   
<table class="records_list" id="banner_list">
    <thead>
        <tr>
            <th>{{ "Id"|trans({}, "banner") }}</th>
            <th>{{ "Description"|trans({}, "banner") }}</th>
            <th>{{ "Tag"|trans({}, "banner") }}</th>
            <th>{{ "Kod"|trans({}, "banner") }}</th>
            <th>{{ "Width"|trans({}, "banner") }}</th>
            <th>{{ "Height"|trans({}, "banner") }}</th>
            <th>{{ "Is_used"|trans({}, "banner") }}</th>
            <th>{{ "Actions"|trans({}, "banner") }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr id ="tr_{{ entity.id }}">
            <td><a href="{{ path('banner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.tag }}</td>
            <td>{{ entity.kod }}</td>
            <td>{{ entity.width }}</td>
            <td>{{ entity.height }}</td>
            <td>
                <form style = 'display:inline-block' action="{{ path('banner_update_visible', { 'id': entity.id }) }}" method="post">
                    <div class = 'hide'>
                        {% set visible = visible_form[entity.id]['is_used'] %}
                        {{ form_label(  visible ) }}
                        {{ form_errors( visible ) }}
                    </div>

                    {{ form_widget( visible, { 'attr': { 'class': 'checkbox_update_visible' } } ) }}
                    {{ form_rest(visible_form[entity.id]) }}
                </form>
            </td>
           <td>
                {% if loop.first == false %}
                    <div class="link_block">
                        <a class="menu_sys_up change_position_object"
                           data-form="#banner_kod_{{entity.id}}"
                           data-link="#banner_list"
                           data-action="up"></a>
                    </div>
                {% else %}
                    <div class="link_block" style="width: 18px; height: 14px;"></div>
                {% endif %}
                {% if loop.last == false %}
                    <div class="link_block">
                        <a class="menu_sys_down change_position_object"
                           data-form="#banner_kod_{{entity.id}}"
                           data-link="#banner_list"
                           data-action="down"></a>
                    </div>                
                {% else %}
                    <div class="link_block" style="width: 18px; height: 14px;"></div>
                {% endif %}                
                <a class = 'menu_sys_edit new_window' target= '_blank' href="{{ path('banner_edit', { 'id': entity.id }) }}">{{ "edit"|trans }}</a>
                <a class = 'menu_sys_delete delete_object'
                   data-link="#tr_{{entity.id}}" data-form="#banner_delete_{{entity.id}}">
                    {{ "delete"|trans }}</a>              
                <form id="banner_delete_{{entity.id}}" action="{{ path('banner_delete_ajax', { 'id': entity.id }) }}" method="post">
                    {{ form_rest(delete_form[entity.id]) }}
                </form>                
                <form id="banner_kod_{{entity.id}}" style ="display:inline-block" action="{{ path( 'banner_change_kod', { 'id': entity.id }) }}" method="post">
                    {{ form_widget( change_kod_form[entity.id] ) }}
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
        
        
{% endblock %}