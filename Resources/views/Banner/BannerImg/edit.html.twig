{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block menu %}
    {# скрываем меню #}
{% endblock %}
{% block body %}
<h1>Редактирование баннера</h1>
<img  src = '{{ vich_uploader_asset(entity, 'image') }}' >
<form action="{{ path('bannerimg_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('bannerimg') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('bannerimg_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
