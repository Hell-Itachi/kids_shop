{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block menu %}
{% endblock %}
{% block body %}
<div class = 'menu_sys_top_menu_bg'></div>
<div class = 'menu_sys_main_conteiner'>
<h1 class = 'menu_sys_h1'>{{ "Banner creation"|trans({}, "banner") }}
    <br />
    <br />
</h1>

<hr />
<div class = 'fl' style = 'position: fixed; top: 5px; right: 10px; height: 30px;'>
    
</div>

<form action="{{ path('banner_create') }}" method="post" {{ form_enctype(form) }}>
    <div class = '' style = 'position: fixed; top: 5px; right: 80px; height: 30px;'>
        <div class = 'fl'>
            <button class = 'menu_sys_save_button' type="submit" alt='Сохранить'>  </button>
        </div>
        
    </div>
    <div class = 'menu_sys_upper_form fl'>
        <div class = 'fl'>
            {{ form_row( form.kod ) }}
        </div>
        <div class = 'fl'>
            {{ form_row( form.tag ) }}
        </div>
        <div class = 'fl'>
            {{ form_row( form.is_used ) }}
        </div>
    </div>
        <br class = 'clr' />
    <hr />
    <div class = 'menu_sys_lang_select'>
        <div class = 'menu_sys_lang_show'>
                 <div>
                    {{ form_label(  form.description ) }}
                    {{ form_errors( form.description ) }}
                    {{ form_widget( form.description, { 'attr': {'class': 'menu_sys_input_edit'} }) }}
                </div>
                 <div>
                    {{ form_label(  form.width ) }}
                    {{ form_errors( form.width ) }}
                    {{ form_widget( form.width, { 'attr': {'class': 'menu_sys_input_edit'} } ) }}
                </div>
                 <div>
                    {{ form_label(  form.height ) }}
                    {{ form_errors( form.height ) }}
                    {{ form_widget( form.height, { 'attr': {'class': 'menu_sys_input_edit'} } ) }}
                </div>
            </div>   
        {{ form_widget(form) }}
    </div>
        <br class="clr" />
   {{ form_rest(form) }}
</form>
{% endblock %}