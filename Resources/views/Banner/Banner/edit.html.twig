{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block menu %}
    {# скрываем меню #}
{% endblock %}
{% block body %}
<div class = 'menu_sys_top_menu_bg'></div>

<div class = 'menu_sys_main_conteiner'>

<h1 class = 'menu_sys_h1'>{{ "Banner edit"|trans({}, "banner") }}</h1>

<hr />
<form action="{{ path('banner_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class = 'menu_sys_delete_button' type="submit" alt='Delete'></button>
</form>
<form action="{{ path('banner_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class = 'fl'>
        <button class = 'menu_sys_save_button' type="submit" alt='Сохранить'>  </button>
    </div>
    <div class = 'menu_sys_upper_form fl'>
        <div class = 'fl'>
            {{ form_row( edit_form.kod ) }}
        </div>
        <div class = 'fl'>
            {{ form_row( edit_form.tag ) }}
        </div>
        <div class = 'fl'>
            {{ form_row( edit_form.is_used ) }}
        </div>
    </div>
    
    {# какая-то муть по языкам #}
    <br class = 'clr' />
    <hr />
        <div class = 'menu_sys_lang_select'>
        <div class = 'menu_sys_lang_show'>
                 <div>
                    {{ form_label(  edit_form.description ) }}
                    {{ form_errors( edit_form.description ) }}
                    {{ form_widget( edit_form.description, { 'attr': {'class': 'menu_sys_input_edit'} }) }}
                </div>
                 <div>
                    {{ form_label(  edit_form.width ) }}
                    {{ form_errors( edit_form.width ) }}
                    {{ form_widget( edit_form.width, { 'attr': {'class': 'menu_sys_input_edit'} } ) }}
                </div>
                 <div>
                    {{ form_label(  edit_form.height ) }}
                    {{ form_errors( edit_form.height ) }}
                    {{ form_widget( edit_form.height, { 'attr': {'class': 'menu_sys_input_edit'} } ) }}
                </div>
            </div>   
    </div>
        <br class="clr" />
   {{ form_rest(edit_form) }}
</form>
               {% block images %}
                    {% render "ItcKidsBundle:Banner/BannerImg:index" with { 'parent_id': entity.id , 'coulonpage': 100, 'page':1}%}
               {% endblock %}
{% endblock %}