{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block body %}
{{ tinymce_init() }}
<h1 class='menu_sys_h1'>Методы  оплаты</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Компания</th>
            <th>Номер акаунта</th>
            <th>Код</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('pay_meth_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.company }}</td>
            <td>{{ entity.accnum }}</td>
            <td>{{ entity.kod }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('pay_meth_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('pay_meth_new') }}" class="new_window addbutton">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}